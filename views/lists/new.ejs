<div class="section">
  <h1 class="title">New list</h1>
  <h2 class="subtitle">Create a new list by giving it a title</h2>

  <div class="columns">
    <div class="column is-one-quarter">
      <form method="POST" action="/lists">
        <div class="field">
          <label class="label" for="title">Title</label>
          <div class="control">
            <input class="input" type="text" name="title" id="title" required>
          </div>
        </div>
        <button class="button is-link">Add list</button>
      </form>
    </div>
  </div>
</div>
